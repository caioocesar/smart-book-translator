{
  "name": "smart-book-translator-electron",
  "version": "1.0.0",
  "description": "Smart Book Translator - Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.smartbooktranslator.app",
    "productName": "Smart Book Translator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "../backend/**/*",
      "../frontend/dist/**/*",
      "../icon.png",
      "!../backend/node_modules",
      "!../backend/outputs",
      "!../backend/database/*.db"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*", "!node_modules", "!outputs", "!database/*.db"]
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "../icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "../icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
