{
  "name": "smart-book-translator-electron",
  "version": "1.0.0",
  "description": "Smart Book Translator - Desktop Application",
  "main": "main.js",
  "author": "Smart Book Translator Team",
  "license": "SEE LICENSE IN README.md",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64",
    "dist:win:portable": "electron-builder --win portable --x64",
    "dist:linux": "electron-builder --linux --x64",
    "dist:all": "electron-builder --win --linux --x64"
  },
  "build": {
    "appId": "com.smartbooktranslator.app",
    "productName": "Smart Book Translator",
    "copyright": "Copyright Â© 2026 Smart Book Translator",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "../backend/**/*",
      "../frontend/dist/**/*",
      "../icon.png",
      "../scripts/**/*",
      "!../backend/node_modules",
      "!../backend/outputs",
      "!../backend/uploads",
      "!../backend/database/*.db",
      "!../backend/tests"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*", "!node_modules", "!outputs", "!uploads", "!database/*.db", "!tests"]
      },
      {
        "from": "../scripts",
        "to": "scripts"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "../icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Smart Book Translator",
      "verifyUpdateCodeSignature": false,
      "sign": null,
      "signingHashAlgorithms": [],
      "fileAssociations": [
        {
          "ext": "epub",
          "name": "EPUB Document",
          "description": "Electronic Publication",
          "role": "Editor"
        },
        {
          "ext": "pdf",
          "name": "PDF Document",
          "description": "Portable Document Format",
          "role": "Viewer"
        },
        {
          "ext": "docx",
          "name": "Word Document",
          "description": "Microsoft Word Document",
          "role": "Editor"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "../icon.png",
      "category": "Office;Utility",
      "synopsis": "AI-powered document translator",
      "description": "Smart Book Translator is a powerful desktop application for translating documents (EPUB, DOCX, PDF) using AI translation services.",
      "desktop": {
        "Name": "Smart Book Translator",
        "Comment": "Translate documents with AI",
        "Categories": "Office;Utility;",
        "Keywords": "translator;epub;pdf;docx;ai;",
        "StartupNotify": "true"
      },
      "fileAssociations": [
        {
          "ext": "epub",
          "name": "EPUB Document",
          "mimeType": "application/epub+zip"
        },
        {
          "ext": "pdf",
          "name": "PDF Document",
          "mimeType": "application/pdf"
        },
        {
          "ext": "docx",
          "name": "Word Document",
          "mimeType": "application/vnd.openxmlformats-officedocument.wordprocessingml.document"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Smart Book Translator",
      "installerIcon": "../icon.png",
      "uninstallerIcon": "../icon.png",
      "installerHeaderIcon": "../icon.png",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "license": "../README.md",
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "deb": {
      "depends": ["gconf2", "gconf-service", "libnotify4", "libappindicator1", "libxtst6", "libnss3"],
      "artifactName": "${name}_${version}_${arch}.${ext}",
      "priority": "optional"
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}",
      "license": "../README.md"
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
