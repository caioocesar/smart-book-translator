# Smart Book Translator - Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database Configuration
# SQLite database will be created automatically

# API Keys (Optional - can be configured in the UI)
DEEPL_API_KEY=
OPENAI_API_KEY=

# Output Directory
OUTPUT_DIR=./outputs

# Upload Directory
UPLOAD_DIR=./uploads

# Chunk Size
MAX_CHUNK_SIZE=3000

# Default Provider
DEFAULT_PROVIDER=google
